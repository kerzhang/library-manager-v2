extends layout.pug

block content
  body
    h1 Books
    p
      a.button(href='/books/new') Create New Book
    p
      | Filters 
      a(href='/books') All
      |  
      a(href='/books/overdue') Overdue
      |  
      a(href='/books/checked_out') Checked Out
      .input_group
        input#search.form-control(type='search' placeholder='Search for book...')
        span.input-group-btn
          button.btn.btn-primary(type='button', onclick='searchBook()') Search
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each book in books
          tr
            td
              a(href='/books/' + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.first_published
    br
    .pagination
      each page in totalPages
        a(class={active: page===currentPage} href='/books?page='+ page )= page


    script(src='../javascripts/main.js')
