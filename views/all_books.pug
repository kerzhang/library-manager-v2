extends layout.pug

block content
  body
    h1 Books
    p
      a.button(href='/books/new') Create New Book
    p
      | Filters 
      a(href='/books') All
      |  
      a(href='/books?filter=overdue') Overdue
      |  
      a(href='/books?filter=checked_out') Checked Out
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each book in books
          tr
            td
              a(href='/books/' + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.first_published
    br
    .pagination
      each page in totalPages
        a(class={active: page===currentPage} href='/books?page='+ page )= page



