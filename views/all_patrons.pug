extends layout.pug

block content
  body
    h1.mt-3.mb-3 Patrons
    p
      a.btn.btn-success.btn-sm(href='/patrons/new') Create New Patron

    table.table.table-striped.table-bordered.table-hover.table-sm
      thead.bg-info.text-white
        tr
          th Name 
          th Address
          th Email
          th Library ID
          th Zip
      tbody
        each patron in patrons
          tr
            td
              a.text-success(href='/patrons/' + patron.id)= patron.first_name + ' ' + patron.last_name
            td= patron.address
            td= patron.email
            td= patron.library_id
            td= patron.zip_code
