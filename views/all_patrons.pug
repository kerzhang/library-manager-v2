extends layout.pug

block content
  body
    h2 Patrons
    p
      a.btn.btn-success.btn-sm(href='/patrons/new') Create New Patron

    table.table.table-striped.table-bordered.table-hover.table-sm
      thead.thead-inverse
        tr
          th Name 
          th Address
          th Email
          th Library ID
          th Zip
      tbody
        each patron in patrons
          tr
            td
              a(href='/patrons/' + patron.id)= patron.first_name + ' ' + patron.last_name
            td= patron.address
            td= patron.email
            td= patron.library_id
            td= patron.zip_code
