extends layout.pug

block content
  body
    h2.m-3 New Book 
    if errors
      h4.alert-danger Oooops! Errors returned!
      ul.alert
        each error in errors
          li.alert-danger= error.message
    form(action='/books', method='post')
      p.form-group
        label(for='title') Title
        input#title.form-control(type='text', name='title', value= book.title)
      p.form-group
        label(for='author') Author
        input#author.form-control(type='text' name='author', value= book.author)
      p.form-group
        label(for='genre') Genre
        input#genre.form-control(type='text' name='genre', value= book.genre)
      p.form-group
        label(for='first_published') First Published
        input#first_published.form-control(type='text' name='first_published', value= book.first_published)
      p.form-group
        input.btn.btn-success(type='submit', value='Create New Book')
